          }
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces', concat(variables('VMNames')[1],'NIC'))]"
            }
          ]
        }
      }
      //"resources": [
      //  // Join domain - Json AD Domain Extension
      //  {
